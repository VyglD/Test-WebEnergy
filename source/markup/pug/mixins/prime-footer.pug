include ../mixins/menu.pug

mixin prime-footer(currentPage)
  footer(class="prime-footer" data-scroll-offset)
    div(class="prime-footer__content")
      p(class="prime-footer__copyright").
        © 2012–2013 ЗАО «Компания»
        #[a(class="prime-footer__email" href="mailto:info@name.ru") info@name.ru]
      +menu(currentPage, `menu--footer`)
      div(class="prime-footer__developers-wrapper")
        p(class="prime-footer__developers").
          #[span(class="prime-footer__developers-name") Разработка сайта]
          —  компания «Пиксель Плюс»
